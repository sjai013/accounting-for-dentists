@using System.Security.Cryptography
@using AccountingForDentists.Components.Pages.Shared.InputFile
@inject IJSRuntime JSRuntime
<EditForm id="contract-income-form" Model=@Model OnSubmit="Submit" class="d-flex flex-column gap-3">
    <div class="d-flex flex-xl-row flex-column gap-2">
        <div class="border border-1 p-3 pt-1 rounded flex-grow-1">
            <h1 class="display-6 border-bottom d-flex flex-row justify-content-between">
                <div>Details </div>
            </h1>
            <div class="d-flex gap-2 flex-xl-row flex-column gap-2">
                <div class="">
                    <label for="Model.TotalSalesAmount">Invoice Date:</label>
                    <InputDate id="Model.InvoiceDate" class="form-control fs-3" @bind-Value="Model!.InvoiceDate" />
                </div>
                <div class="flex-grow-1">
                    <label for="clinic-datalist">Clinic:</label>
                    <input @bind-value="Model.ClinicName" class="form-control fs-3" list="clinic-datalist-options"
                        id="clinic-datalist" placeholder="Search for clinic...">
                    <datalist id="clinic-datalist-options">
                        @foreach (string business in RegisteredBusinessNames)
                        {
                            <option value="@business" />
                        }
                    </datalist>
                </div>
            </div>
        </div>
    </div>
    <div class="d-flex flex-xl-row flex-column gap-2">
        <div class="d-flex flex-column border border-1 p-3 pt-1 rounded gap-2 flex-grow-1">
            <h1 class="display-6 border-bottom d-flex flex-row justify-content-between">
                <div>Sales </div>
                <div>$ @((Model.SalesAmounts.Sum(x => x.Amount) + Model.SalesAmounts.Sum(x => x.GST)).ToString("0.00"))
                </div>
            </h1>
            @foreach (var salesAmount in Model.SalesAmounts)
            {
                <div class="d-flex flex-row gap-2">
                    <div class="flex-grow-1">
                        <label for="Model.TotalSalesAmount">Amount:</label>
                        <div class="fs-3 input-group">
                            <InputNumber class="form-control ps-5 fs-3 bg-transparent" @bind-Value="salesAmount.Amount" />
                            <span style="z-index: 3;" class="input-group-prepend">
                                <div class=" ms-4 position-absolute top-50 start-0 translate-middle ">
                                    <span class="text-muted ">$</span>
                                </div>
                            </span>
                        </div>
                    </div>
                    <div class="flex-grow-1">
                        <label for="Model.TotalSalesGST">GST:</label>
                        <div class="fs-3 input-group">
                            <InputNumber class="form-control ps-5 fs-3 bg-transparent" @bind-Value="salesAmount.GST" />
                            <span style="z-index: 3;" class="input-group-prepend">
                                <div class=" ms-4 position-absolute top-50 start-0 translate-middle ">
                                    <span class="text-muted ">$</span>
                                </div>
                            </span>
                        </div>
                    </div>
                </div>
            }
            <button class="btn btn-primary btn-sm btn-block" @onclick="OnAddSalesRow" type="button">Add Sales </button>
        </div>

        <div class="d-flex flex-column border border-1 p-3 pt-1 rounded gap-2 flex-grow-1">
            <h1 class="display-6 border-bottom d-flex flex-row justify-content-between">
                <div>Expenses</div>
                <div>$ @(
                                        (Model.ExpensesAmounts.Sum(x => x.Amount) +
                                        Model.ExpensesAmounts.Sum(x => x.GST)).ToString("0.00")
                                        )</div>
            </h1>
            @foreach (var expensesAmount in Model.ExpensesAmounts)
            {
                <div class="d-flex flex-row gap-2">
                    <div class="flex-grow-1">
                        <label for="Model.ServiceFee">Expense:</label>
                        <div class="fs-3 input-group">
                            <InputNumber class="form-control ps-5 fs-3 bg-transparent"
                                @bind-Value="expensesAmount.Amount" />
                            <span style="z-index: 3;" class="input-group-prepend">
                                <div class=" ms-4 position-absolute top-50 start-0 translate-middle ">
                                    <span class="text-muted ">$</span>
                                </div>
                            </span>
                        </div>
                    </div>
                    <div class="flex-grow-1">
                        <label for="Model.ServiceFeeGST">GST:</label>
                        <div class="fs-3 input-group">
                            <InputNumber class="form-control ps-5 fs-3 bg-transparent" @bind-Value="expensesAmount.GST" />
                            <span style="z-index: 3;" class="input-group-prepend">
                                <div class=" ms-4 position-absolute top-50 start-0 translate-middle ">
                                    <span class="text-muted ">$</span>
                                </div>
                            </span>
                        </div>
                    </div>
                </div>
            }
            <button class="btn btn-primary btn-sm btn-block" @onclick="OnAddExpenseRow" type="button">Add
                Expense</button>
        </div>
    </div>
    <FileSelector IsFileUploaded="Model.AttachmentId is not null" Value="Model.File"
        OnFileDownloadRequest="FileDownload" OnFileRemoved="RemoveFile" OnFileSelected="SelectFile">
    </FileSelector>

</EditForm>

<table class="table">
    <thead>
        <tr>
            <th scope="col">Payment</th>
            <th scope="col">GST</th>
            <th scope="col">Total Income</th>
            <th scope="col">%</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>$@Model.IncomeAmount</td>
            <td>$@Model.IncomeGST</td>
            <td>$@Model.TotalIncome</td>
            <td>@(((Model.TotalSalesAmount != 0 ? Model.TotalIncome / Model.TotalSalesAmount : 0) *
                                100).ToString("0.0"))</td>
        </tr>
    </tbody>
</table>

<div class="d-flex flex-row gap-2">
    <button style="flex-basis: 100px;" class="flex-grow-1 btn btn-primary btn-block" form="contract-income-form"
        type="submit">Save</button>
    <button @onclick="Cancel" style="flex-basis: 50px;" class="btn btn-outline-danger btn-block"
        type="submit">Cancel</button>
</div>