@page "/Contracts"
@using AccountingForDentists.Components.Pages.Shared
@rendermode InteractiveServer

<div class="d-flex flex-column gap-2">
    <div class="d-flex flex-row gap-3">
        <div style="flex-basis:55px" class="flex-shrink-0 flex-grow-0 align-content-center">FY</div>
        <FYButtonGroup @bind-SelectedFY:get="FY" @bind-SelectedFY:set="SelectFY"></FYButtonGroup>
    </div>

    <div class="d-flex flex-row gap-3">
        <div class="d-flex flex-row gap-3">
            <div style="flex-basis:55px" class="flex-shrink-0 flex-grow-0 align-content-center">Cinic</div>
            <ButtonGroup Items="Businesses!" TextDelegate="(s) => s" @bind-Selected:get="Business"
                @bind-Selected:set="SelectBusiness">
            </ButtonGroup>

        </div>
    </div>
</div>

<table class="table">
    <thead>
        <tr>
            <th scope="col">Date</th>
            <th scope="col">Clinic</th>
            <th scope="col">Sales</th>
            <th scope="col">Expenses</th>
            <th scope="col">Income</th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in SFAEntities)
        {
            <tr>
                <td class="align-content-center">@item.InvoiceDate.ToString("dd/MM/yyyy")</td>
                <td class="align-content-center">@item.BusinessName</td>
                <td class="align-content-center">$@((item.SalesEntity?.Total ?? 0).ToString("0.00"))</td>
                <td class="align-content-center">$@((item.ExpensesEntity?.Total ?? 0).ToString("0.00"))</td>
                <td class="align-content-center">$@(((item.SalesEntity?.Total ?? 0) - (item.ExpensesEntity?.Total ??
                                    0)).ToString("0.00"))</td>
                <td class="align-content-center"><button class="btn" @onclick="() => DeleteSFA(item)"><i
                            class="bi bi-x-lg"></i></button>
                </td>
            </tr>
        }
    </tbody>
    <tfoot>

    </tfoot>
</table>