@page "/Contracts"
@using AccountingForDentists.Components.Pages.Shared
@rendermode InteractiveServer

<div class="d-flex flex-column gap-2 h3 fs-6">
    <div class="d-flex flex-row gap-3">
        <div style="flex-basis:40px" class="flex-shrink-0 flex-grow-0 align-content-center">FY</div>
        <FYOptionList @bind-SelectedFY:get="FY" @bind-SelectedFY:set="SelectFY" />
    </div>

    <div class="d-flex flex-row gap-3">
        <div class="d-flex flex-row gap-3">
            <div style="flex-basis:40px" class="flex-shrink-0 flex-grow-0 align-content-center">Cinic</div>
            <OptionList Items="Businesses!" @bind-Selected:get="Business" @bind-Selected:set="SelectBusiness" />
        </div>
    </div>
</div>

<div class="table-responsive">
    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col">Date</th>
                <th scope="col">Clinic</th>
                <th class="text-end" scope="col">Sales</th>
                <th class="text-end" scope="col">Expenses</th>
                <th class="text-end" scope="col">Income</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in SFAEntities)
            {
                <tr>
                    <td class="align-content-center">@item.InvoiceDateReference.Date.ToString("dd/MM/yyyy")</td>
                    <td class="align-content-center">@item.BusinessName</td>
                    <td class="text-end">$@((item.SalesEntity?.Total ?? 0).ToString("#,#0.00"))</td>
                    <td class="text-end">$@((item.ExpensesEntity?.Total ?? 0).ToString("#,#0.00"))</td>
                    <td class="text-end">$@((((item.SalesEntity?.Amount ?? 0) )-
                                            (item.ExpensesEntity?.Total ??
                                            0)).ToString("#,#0.00"))</td>
                    <td class="text-end">
                        <button class="btn" @onclick="() => DeleteSFA(item)">
                            <i class="bi bi-x-lg"></i>
                        </button>
                        <button class="btn" @onclick="() => EditContractIncome(item)">
                            <i class="bi bi-pencil"></i>
                        </button>
                    </td>
                </tr>
            }
        </tbody>
        <tfoot class="table-group-divider fw-bold">
            <tr>
                <td></td>
                <td></td>
                <td class="text-end">$@SFAEntities.Sum(x => x.SalesEntity?.Total ?? 0).ToString("#,#0.00")</td>
                <td class="text-end">$@SFAEntities.Sum(x => x.ExpensesEntity?.Amount ?? 0).ToString("#,#0.00")</td>
                <td class="text-end">$@SFAEntities.Sum(x => (x.SalesEntity?.Amount ?? 0) - (x.ExpensesEntity?.Amount ??
                                        0)).ToString("#,#0.00")
                </td>
                <td></td>
            </tr>
        </tfoot>
    </table>
</div>
<button class="btn btn-primary w-100" @onclick="AddContractIncome">Add New</button>