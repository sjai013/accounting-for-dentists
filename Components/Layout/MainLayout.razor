@using Microsoft.AspNetCore.Components.Authorization
@inherits LayoutComponentBase

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="top-row px-4 gap-2">

            <CascadingAuthenticationState>
                <AuthorizeView>
                    <Authorized>
                        <div>Hello, @context?.User?.Identity?.Name</div>
                        <div><a class="btn btn-outline-dark" href="/account/logout">Logout</a></div>
                    </Authorized>
                    <NotAuthorized>
                        <div><a class="btn btn-outline-dark" href="/account/login">Login</a></div>
                    </NotAuthorized>
                </AuthorizeView>
            </CascadingAuthenticationState>
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

<div id="blazor-error-ui" data-nosnippet>
    An unhandled error has occurred.
    <a href="." class="reload">Reload</a>
    <span class="dismiss">🗙</span>
</div>
